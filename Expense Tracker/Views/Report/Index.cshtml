@{
 
    ViewData["isReport"] = true;
   
}

<div class="container mt-4">
    <h2 class="fw-bold">Reports</h2>

    <!-- Filters -->
    <div class="row">
        <form asp-action="Index" asp-controller="Report" method="post">
            <div class="row align-items-end">
                <div class="col-md-6">
                    <div class="mb-3">
                        <ejs-datepicker id="MonthYearPicker"
                                        format="MMMM yyyy"
                                        start="Year"
                                        depth="Year"
                                        placeholder="Select Month and Year"
                                        value="@ViewBag.SelectedMonth"
                                        max="@DateTime.Now"
                                        showTodayButton="false">

                        </ejs-datepicker>

                    </div>
                </div>

                <div class="col-md-2 mb-3">
                    <button type="submit" class="btn btn-success"><i class="fa-solid fa-magnifying-glass"></i></button>
                </div>
            </div>

            <!-- These are what ASP.NET will bind -->
            <input type="hidden" id="Month" name="Month" value="@ViewBag.SelectedMonth" />
        </form>
    </div>

    <div class="row row d-flex align-items-stretch">
        <!-- Top Categories -->
        <div class="col-md-4 d-flex">
            <div class="card w-100 h-100 p-3" style="background-color:#1a222b;color:#fff; height:300px;">
                <h5 class="fw-bold">Top categories</h5>
                <ejs-chart id="topCategoriesChart" width="100%" height="100%">
                    <e-chart-tooltipsettings enable="true" format="${point.x} : ${point.y}"></e-chart-tooltipsettings>
                    <e-chart-primaryxaxis valueType="Category">
                        <e-majorgridlines width="0"></e-majorgridlines>
                        <e-labelstyle color="white" size="14px" fontFamily="Segoe UI"></e-labelstyle>
                    </e-chart-primaryxaxis>
                    <e-chart-primaryyaxis>
                        <e-labelstyle color="white" size="14px" fontFamily="Segoe UI"></e-labelstyle>
                        </e-chart-primaryyaxis>
                    <e-series-collection>
                        <e-series type="Bar"
                                  xName="Category"
                                  yName="Amount"
                                  dataSource="@(ViewBag.ExpenseSummary)">
                        </e-series>
                    </e-series-collection>
 
                </ejs-chart>
            </div>
        </div>

        <!-- Year-to-Date vs Last Year-to-Date -->
       
        <div class="col-md-4 d-flex">
            <div class="card w-100 h-100 p-3" style="background-color:#1a222b; color:#fff; height:300px;">
                <h5 class="fw-bold">Monthly Expense Trend</h5>
                <ejs-chart id="expenseComparisonChart" width="100%" height="100%">
                    <e-chart-primaryxaxis valueType="Category">
                        <e-majorgridlines width="0"></e-majorgridlines>
                        <e-labelstyle color="white" size="14px" fontFamily="Segoe UI"></e-labelstyle>
                    </e-chart-primaryxaxis>
                    <e-chart-primaryyaxis>
                        <e-labelstyle color="white" size="14px" fontFamily="Segoe UI"></e-labelstyle>
                    </e-chart-primaryyaxis>
                    <e-chart-legendsettings visible="true" position="Top" toggleVisibility="false">
                    <e-legendsettings-textstyle size="1rem" color="#fff" />
                    </e-chart-legendsettings>
                    <e-series-collection>
                        <e-series type="Column"
                                  xName="Month" yName="ThisYear"
                                  name="This Year"
                                  dataSource="ViewBag.ExpenseComparison">
                        </e-series>
                        <e-series type="Column"
                                  xName="Month" yName="LastYear"
                                  name="Last Year"
                                  dataSource="ViewBag.ExpenseComparison">
                        </e-series>
                    </e-series-collection>
                </ejs-chart>
            </div>
        </div>
        <!-- Spending Heatmap -->
        <div class="col-md-4 d-flex">
            <div class="card w-100 h-100 p-3" style="background-color:#1a222b; color:#fff; height:300px;">
                <h5 class="fw-bold">Spending heatmap of @ViewBag.SelectedMonth </h5>
                <div class="d-flex justify-content-center align-items-center h-100">
                    <ejs-calendar id="calendar"
                                  renderDayCell="highlightTransactionDates"
                                  value="@ViewBag.SelectedMonth"
                                  max="DateTime.Now"
                                  showTodayButton="false"
                                  created="onCalendarCreated">
                    </ejs-calendar>
                </div>
            </div>
        </div>

    </div>
    <div class="row d-flex">
        <!-- Recurring Expenses -->
        <div class="col-md-8">
            <div class="card p-3 mt-4 shadow-lg border-0"
                 style="background-color:#1a222b; color:#fff; border-radius:12px;">

                <!-- Title -->
                <h5 class="fw-bold mb-4" style="color:#f1f1f1;">
                    📊Top 5 Categories with Most Transactions in @ViewBag.SelectedMonth
                </h5>

                <ul class="list-unstyled">
                    @foreach (var item in @ViewBag.FrequentTransactions)
                    {
                        <li class="mb-3">
                            <div class="d-flex justify-content-between align-items-center p-3 rounded"
                                 style="background:#2a2f36; color:white; border-left:4px solid #4e9cff; transition:0.3s;">

                                <span style="font-weight:500; font-size:1.2rem;">
                                    @item.Category <br>
                                    <small class="badge bg-warning text-dark" >
                                        💰 ₹@item.Amount  Spent over @item.Count transactions for <strong>@item.Category</strong>
                                    </small>
                                </span>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
     
<script>
    // Before form submission, inject picker values into hidden fields
     document.querySelector("form").addEventListener("submit", function () {
    var SelectMonth = document.getElementById("MonthYearPicker").ej2_instances[0].value; // JS Date

    document.getElementById("Month").value = SelectMonth
        ? SelectMonth.toLocaleDateString('en-IN', { month: 'long', year: 'numeric' })
        : "";
    });
</script>
<script>
    // This will generate a clean JS array of Date objects
    var transactionDates = [
    @foreach (var d in ViewBag.HeatMapData as List<DateTime>)
    {
        @: new Date("@d.ToString("yyyy-MM-dd")"),
    }
    ];
</script>
<script>
    function highlightTransactionDates(args) {
        for (var i = 0; i < transactionDates.length; i++) {
            if (args.date.toDateString() === transactionDates[i].toDateString()) {
                args.element.classList.add("transaction-day");
            }
        }
    }
</script>
<script>
    function onCalendarCreated(args) {
        // Remove the default selection after render
        var calendarObj = document.getElementById("calendar").ej2_instances[0];
        calendarObj.value = null;   // clears selection but keeps month view
    }
</script>
<style>
    .e-calendar .transaction-day {
        background-color: #2d8c78 !important;
        color: #fff !important;
        border-radius: 25%;
    }
</style>

