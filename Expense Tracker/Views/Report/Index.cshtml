@{
    ViewData["isReport"] = true;
   
}

<div class="container mt-4">
    <h2 class="fw-bold">Reports</h2>

    <!-- Filters -->
    <div class="row">
        <form asp-action="Index" asp-controller="Report" method="post">
            <div class="row align-items-end">
                <div class="col-md-6">
                    <div class="mb-3">
                        <ejs-datepicker id="MonthYearPicker"
                                        format="MMMM yyyy"
                                        start="Year"
                                        depth="Year"
                                        placeholder="Select Month and Year"
                                        value="@ViewBag.SelectedMonth"
                                        max="@DateTime.Now"
                                        showTodayButton="false">

                        </ejs-datepicker>

                    </div>
                </div>

                <div class="col-md-2 mb-3">
                    <button type="submit" class="btn btn-success"><i class="fa-solid fa-magnifying-glass"></i></button>
                </div>
            </div>

            <!-- These are what ASP.NET will bind -->
            <input type="hidden" id="Month" name="Month" value="@ViewBag.SelectedMonth" />
        </form>
    </div>


    <!-- Dashboard Grid -->
    <div class="row g-4">

        <!-- Top Categories -->
        <div class="col-md-6 col-lg-4">
            <div class="card p-3" style="background-color:#1a222b;color:#fff; height:300px;">
                <h5 class="fw-bold">Top categories</h5>
                <ejs-chart id="topCategoriesChart" width="100%" height="100%">
                    <e-chart-tooltipsettings enable="true" format="${point.x} : ${point.y}"></e-chart-tooltipsettings>
                    <e-chart-primaryxaxis valueType="Category">
                        <e-majorgridlines width="0"></e-majorgridlines>
                        <e-labelstyle color="white" size="14px" fontFamily="Segoe UI"></e-labelstyle>
                    </e-chart-primaryxaxis>
                    <e-chart-primaryyaxis>
                        <e-labelstyle color="white" size="14px" fontFamily="Segoe UI"></e-labelstyle>
                        </e-chart-primaryyaxis>
                    <e-series-collection>
                        <e-series type="Bar"
                                  xName="Category"
                                  yName="Amount"
                                  dataSource="@(ViewBag.ExpenseSummary)">
                        </e-series>
                    </e-series-collection>
 
                </ejs-chart>
            </div>
        </div>

        <!-- Year-to-Date vs Last Year-to-Date -->
       
        <div class="col-md-6 col-lg-4">
            <div class="card p-3" style="background-color:#1a222b; color:#fff; height:300px;">
                <h5 class="fw-bold">Monthly Expense Trend</h5>
                <ejs-chart id="expenseComparisonChart" width="100%" height="100%">
                    <e-chart-primaryxaxis valueType="Category">
                        <e-majorgridlines width="0"></e-majorgridlines>
                        <e-labelstyle color="white" size="14px" fontFamily="Segoe UI"></e-labelstyle>
                    </e-chart-primaryxaxis>
                    <e-chart-primaryyaxis>
                        <e-labelstyle color="white" size="14px" fontFamily="Segoe UI"></e-labelstyle>
                    </e-chart-primaryyaxis>
                    <e-chart-legendsettings visible="true" position="Top" toggleVisibility="false">
                    <e-legendsettings-textstyle size="1rem" color="#fff" />
                    </e-chart-legendsettings>
                    <e-series-collection>
                        <e-series type="Column"
                                  xName="Month" yName="ThisYear"
                                  name="This Year"
                                  dataSource="ViewBag.ExpenseComparison">
                        </e-series>
                        <e-series type="Column"
                                  xName="Month" yName="LastYear"
                                  name="Last Year"
                                  dataSource="ViewBag.ExpenseComparison">
                        </e-series>
                    </e-series-collection>
                </ejs-chart>
            </div>
        </div>



        <!-- Recurring Expenses -->
        <div class="col-md-6 col-lg-4">
            <div class="card p-3">
                <h5 class="fw-bold">Recurring expenses</h5>
                <ul class="list-unstyled">
                    <li>Netflix - ₹499</li>
                    <li>Spotify - ₹199</li>
                    <li>Rent - ₹8,500</li>
                </ul>
            </div>
        </div>

        <!-- Spending Heatmap -->
        <div class="col-md-6 col-lg-4">
            <div class="card p-3">
                <h5 class="fw-bold">Spending heatmap</h5>
                <ejs-calendar id="calendar" isMultiSelection="true"
                              values="@(new DateTime[]{ new DateTime(DateTime.Now.Year, DateTime.Now.Month, 14),
                                                        new DateTime(DateTime.Now.Year, DateTime.Now.Month, 15),
                                                        new DateTime(DateTime.Now.Year, DateTime.Now.Month, 17),
                                                        new DateTime(DateTime.Now.Year, DateTime.Now.Month, 20),
                                                        new DateTime(DateTime.Now.Year, DateTime.Now.Month, 24) })">
                </ejs-calendar>
            </div>
        </div>

        <!-- Insights -->
        <div class="col-md-6 col-lg-4">
            <div class="card p-3">
                <h5 class="fw-bold">Insights</h5>
                <div class="mb-2">
                    <strong>Biggest expense this month:</strong> ₹8,500 on Rent
                </div>
                <div class="mb-2">
                    <strong>You spent 15% more</strong> on Shopping than last month
                </div>
                <div>
                    At this rate, you'll spend <strong>₹25,000</strong> next month
                </div>
            </div>
        </div>

    </div>
</div>
<script>
    // Before form submission, inject picker values into hidden fields
     document.querySelector("form").addEventListener("submit", function () {
    var SelectMonth = document.getElementById("MonthYearPicker").ej2_instances[0].value; // JS Date

    document.getElementById("Month").value = SelectMonth
        ? SelectMonth.toLocaleDateString('en-IN', { month: 'long', year: 'numeric' })
        : "";
    });
</script>


